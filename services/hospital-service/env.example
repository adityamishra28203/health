# Hospital Service Environment Configuration

# Server Configuration
PORT=3003
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hospital-service

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=hospital-service
KAFKA_GROUP_ID=hospital-service-group

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# Encryption Configuration
FILE_ENCRYPTION_KEY=your-file-encryption-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=2000

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000

# Tenant Configuration
DEFAULT_TENANT_TIER=basic
MAX_HOSPITALS_PER_TENANT=10
MAX_USERS_PER_HOSPITAL=100

# ABHA Configuration (Optional)
ABHA_URL=https://abha.abdm.gov.in/api
ABHA_CLIENT_ID=your-abha-client-id
ABHA_CLIENT_SECRET=your-abha-client-secret
ABHA_PRIVATE_KEY=your-abha-private-key
ABHA_PUBLIC_KEY=your-abha-public-key

# Local Development Environment Configuration

# Database
MONGODB_URI=mongodb://localhost:27017
REDIS_URI=redis://localhost:6379
POSTGRES_URI=postgresql://securehealth:securehealth123@localhost:5432/securehealth

# Message Queue
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=securehealth-local

# Search
ELASTICSEARCH_URL=http://localhost:9200

# Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Gateway
API_GATEWAY_PORT=3001

# Services
AUTH_SERVICE_PORT=3002
HOSPITAL_SERVICE_PORT=3003
PATIENT_SERVICE_PORT=3004
DOCUMENT_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006
CONSENT_SERVICE_PORT=3007
AUDIT_SERVICE_PORT=3008

# External APIs
ABHA_API_URL=https://sandbox.abdm.gov.in
ABHA_CLIENT_ID=your-abha-client-id
ABHA_CLIENT_SECRET=your-abha-client-secret

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3010

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
BCRYPT_ROUNDS=12

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json


